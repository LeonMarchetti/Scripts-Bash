#!/bin/bash
if [ $EUID != 0 ]; then
    sudo "$0" "$@"
    exit $?
fi

#region Constantes
ERASE="\e[K"
OUT="prueba.txt"
#endregion

#region Colores
CLR_ROJO="\e[91m"
CLR_VERD="\e[92m"
CLR_AMAR="\e[93m"
CLR_AZUL="\e[94m"
CLR_ROSA="\e[95m"
CLR_CYAN="\e[96m"
CLR_BLAN="\e[97m"
CLR_FIN="\e[m"
#endregion

#region Funciones
_error() {
    if [ "$2" ]; then
        echo -e "${ERASE}${CLR_ROJO}$(basename "$0"): $2${CLR_FIN}" >&2
    fi
    exit $1
}

_out() {
    comando=$@
    $@
    log "$comando" $?
}

_success() {
    echo -e "${ERASE}${CLR_VERD}$1${CLR_FIN}"
}
#endregion
